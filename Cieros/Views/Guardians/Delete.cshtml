@model Cieros.Models.Guardian

@{
    ViewBag.Title = "Delete Guardian";
}
<div class="container-fluid">
    <h2 class="h3 mb-2 text-gray-800">Guardian  </h2>


    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Delete Guardian    |     @Html.ActionLink("Back to List", "Index")</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <div class="col-lg-6 ">
                    <h4>Are you sure you want to delete this?</h4>
                    <table class="table table-bordered table-striped">
                        <tr>
                            <td> @Html.DisplayName("Father's Name") </td>
                            <td> @Html.DisplayFor(model => model.FatherName)</td>
                        </tr>
                        <tr>
                            <td> @Html.DisplayName("Mother's Name")</td>
                            <td>  @Html.DisplayFor(model => model.MotherName)</td>
                        </tr>
                        <tr>
                            <td>  @Html.DisplayName("Mothers Phone Number")</td>
                            <td> @Html.DisplayFor(model => model.MotherPhoneNumber)</td>
                        </tr>
                        <tr>
                            <td> @Html.DisplayName("Father's Phone Number")</td>
                            <td> @Html.DisplayFor(model => model.FatherPhoneNumber)</td>
                        </tr>
                        <tr>
                            <td> @Html.DisplayName("Father's Email")</td>
                            <td>  @Html.DisplayFor(model => model.FatherEmail)</td>
                        </tr>
                        <tr>
                            <td>
                                @Html.DisplayName("Mother's EMail")
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.MotherEmail)
                            </td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayName("Contact Address")</td>
                            <td> @Html.DisplayFor(model => model.ContactAddress)</td>
                        </tr>
                        <tr>
                            <td>
                                @Html.DisplayName("Work Address")
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.WorkAddress)
                            </td>
                        </tr>
                       

                    </table>



                    @using (Html.BeginForm("Delete", "Guardians", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "user", role = "form" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            <input type="submit" value="Delete" class="btn btn-info btn-user btn-block" />

                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    @Html.ActionLink("Back to List", "Index")
</div>