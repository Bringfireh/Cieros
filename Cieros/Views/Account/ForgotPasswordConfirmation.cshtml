@{
    ViewBag.Title = "Forgot Password Confirmation";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<div class="container">

    <!-- Outer Row -->
    <div class="row justify-content-center">

        <div class="col-xl-10 col-lg-12 col-md-9">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->


                    <div class="row">
                        <div class="p-5">


                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4"> @ViewBag.Title!</h1>
                            </div>

                            <div>
                                <h5> Please check your email to reset your password.</h5>


                            </div>
                            <hr />
                            <p><img height="15" width="15" src="~/Images/btlogo.png" /> Powered by: <a href="http://www.bringfirehtech.com" target="_blank">Bringfireh Technologies</a></p>
                        </div>

                    </div>
                    <a href="Javascript:history.go(-1)">Back </a>
                </div>
            </div>
        </div>
    </div>
    
</div>