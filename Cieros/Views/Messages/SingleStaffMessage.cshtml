@model IEnumerable<Cieros.Models.Staff>

@{
    ViewBag.Title = "Single Staff Message";
}

<div class="container-fluid">
    <h2 class="h3 mb-2 text-gray-800">Staff Messages </h2>


    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Staff     </h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">

                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr style="background-color:#ececec; font-weight:bold;color:#666">
                            <th>
                                @Html.DisplayName("Staff ID")
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Surname)
                            </th>
                            <th>
                                @Html.DisplayName("Other Names")
                            </th>
                            <th>
                                @Html.DisplayName("Sex")
                            </th>

                            <th>
                                @Html.DisplayName("Phone Number")
                            </th>
                            <th>
                                @Html.DisplayName("Email Address")
                            </th>

                            <th></th>
                        </tr>
                    </thead>
                    <tfoot>

                    </tfoot>
                    <tbody>


                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StaffID)

                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Surname)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Othernames)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Sex)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EmailAddress)
                                </td>

                                <td>
                                   <a href="~/Messages/SingleMsg?id=@item.StaffID">New Messages</a>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>