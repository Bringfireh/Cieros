@model Cieros.Models.RankClass

@{
    ViewBag.Title = "Delete Rank Class";
}

<div class="container-fluid">
    <h2 class="h3 mb-2 text-gray-800">Delete Rank Class </h2>


    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Delete Rank Class  |     @Html.ActionLink("Back to List", "Index")</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <div class="col-lg-6 ">
                    <h3>Are you sure you want to delete this?</h3>
                    <table class="table table-bordered table-striped">

                        <tr>
                            <td> @Html.DisplayName("Class")</td>
                            <td>  @Html.DisplayFor(model => model.StdClass)</td>
                        </tr>
                        <tr>
                            <td>  @Html.DisplayName("Next Class")</td>
                            <td>  @Html.DisplayFor(model => model.NextClass)</td>
                        </tr>


                    </table>


                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            <input type="submit" value="Delete" class="btn btn-info btn-user btn-block" /> 

                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    @Html.ActionLink("Back to List", "Index")
</div>